<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/aui.css" />
    <style>
        body {
            font-size: 20px;
            background-color: #fff;
        }

        header {
            background-color: #336699;
        }

        #main {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
            background-color: #fff;
        }

        section {
            background-color: #fff;
        }

        h1 {
            height: 2.5rem;
            line-height: 2.5rem;
            color: #fff;
            font-size: 20px;
            text-align: center;
        }

        .back {
            position: absolute;
            left: 0px;
            bottom: 0px;
            width: 2.5rem;
            height: 2.5rem;
            background: url(../image/header/back.png) center center no-repeat;
            background-size: 25px auto;
        }

        .kuang {
            width: 100%;
            height: 150px;
            padding: 15px;
            border: solid 1px #f0f0f0;
            border-radius: 3px;
            box-shadow: 0 5px 5px #f1f1f1;
        }

        .kuang .right {
            width: 76px;
            height: 76px;
            float: right;
        }

        .kuang .right .yuan {
            float: right;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #3396fb;
            text-align: center;
            line-height: 56px;
            font-size: .9rem;
            color: #fff;
            margin: 13px auto;
        }

        .kuang .left {
            width: 70%;
            height: 62px;
            line-height: 1.8rem;
            font-size: 1.2rem;
            padding-top: .8rem;
            float: left;
            /*border-bottom: solid 1px #fafafa;*/
            text-align: left;
        }

        .kuang .left .gangwei {
            font-size: .8rem;
            padding-top: .8rem;
            line-height: 1.7rem;
            color: #666;
        }

        .myhang {
            /*width: 100%;*/
            height: 76px;
            margin: 1.2rem auto;
            font-size: .8rem;
            line-height: 76px;
        }

        .myhang .left {
            width: 40%;
            height: 76px;
            float: left;
        }

        .hang .left .hangitem {
            color: #666;
            font-size: .6rem;
        }

        .hang .left .hangcontent {
            font-size: .8rem;
        }

        .myhang .right {
            width: 60%;
            height: 76px;
            float: right;
            text-align: left;
        }

        .aui-list .aui-list-item-label, .aui-list .aui-list-item-label-icon {
            line-height: 3rem;
            width: 42%;
        }
        .aui-btn {
            font-size: 1rem;
            height: 2rem;
            line-height: 2rem;
        }
        .qiandaorow{
              width: 96%;
              height: 150px;
              margin: 5px auto;
              text-align: center;
          }
          .qiandaorow .blueyuan{
              width: 100px;
              height: 100px;
              border-radius:50%;
              background: linear-gradient(#67c0ff, #3196fa); /* 标准的语法 */
              text-align: center;
              line-height: 1.4rem;
              font-size:.9rem;
              color: #fff;
              margin: 0px auto;
              padding-top: 20px;
          }
    </style>
</head>

<body>
    <header id="header">
        <div id="bikeclose" class="back event-back" tapmode onclick="api.closeWin({name:'my_changepass'});"></div>
        <h1 id="pagetitle">添加巡检点</h1>
    </header>
    <section tyle="width:92%; margin:8px auto 0px auto; ">

        <div class="qiandaorow">
              <div class="blueyuan" tapmode onclick="readText();">
                    点击<br />
                  识别NFC卡
                  
              </div>
        </div>
    </section>
    <section style="width:92%; margin:8px auto 0px auto; ">

        <div class="aui-content aui-margin-b-15">
            <ul class="aui-list aui-form-list">
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            巡检点名称：
                        </div>
                        <div class="aui-list-item-input">
                            <input id="xjdtitle" type="text" >
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            巡检点编号：
                        </div>
                        <div class="aui-list-item-input">
                            <input id="xjdbianhao" type="text" >
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            巡检点位置：
                        </div>
                        <div class="aui-list-item-input">
                            <input id="xjdposition" type="text" >
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            NFC卡编码：
                        </div>
                        <div class="aui-list-item-input">
                            <input id="nfcid" type="text" readonly >
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner aui-list-item-center aui-list-item-btn">
                        <div class="aui-btn aui-btn-info aui-margin-r-5" style="min-width: 5rem;" onclick="save()">保存</div>

                    </div>
                </li>
            </ul>
        </div>
    </section>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/bike.js"></script>
<script type="text/javascript" src="../script/doT.min.js"></script>
<script type="text/javascript">


    var demo = null;
    apiready = function() {
        var userinfo = $api.getStorage('userinfo');

        demo = api.require('nfc');
        readingAvailable();
        initPageConfig();
    };

    function readingAvailable() {
        demo.readingAvailable(function(ret, err) {
            // alert(JSON.stringify(ret) + "  " + JSON.stringify(err));
        });
    }

    function initPageConfig() {
        demo.initPageConfig({
            isDebug: true, //开启时，不支持nfc的手机可以打开界面看UI效果
            backgroundColor: '#ffffff', //页面背景色
            title: {
                text: '请读卡', //标题
                color: '#ffffff', //标题字体颜色
                background: '#336699', //标题栏背景色
                layoutHeight: 45 //标题栏高度
            },
            center: {
                logo: 'widget://image/timg-2.gif', //图片logo文件路径 支持fs:// widget://
                text: '请将NFC标签或者贴纸靠近手机背面', //文字说明
                color: '#00EE00', //文字说明字体颜色
            }
        }, function(ret, err) {
            // alert(JSON.stringify(ret) + "  " + JSON.stringify(err));
        });
    }

    function readText() {

        demo.readText(function(ret, err) {
            if (ret) {
                // alert(ret.tagId);
                // $api.val($api.byId('xjdposition'),JSON.stringify(ret.result));
                $api.val($api.byId('nfcid'),ret.tagId);
            } else {
                alert(JSON.stringify(err));
            }
            
        });
    }

    function save(){
        var userinfo = $api.getStorage('userinfo');
        var uid = userinfo.uid;
        var xjdtitle = $api.val($api.byId('xjdtitle'));
        var xjdbianhao = $api.val($api.byId('xjdbianhao'));
        var xjdposition = $api.val($api.byId('xjdposition'));
        var nfcid = $api.val($api.byId('nfcid'));

        //alert(usernametext);

        if(xjdtitle=="")
        {
            alert('巡检点名称不能为空');
        }
        else
        {
            if(xjdbianhao=="")
            {
                alert('巡检点编号不能为空');
            }
            else
            {
                if(xjdposition="")
                {
                    alert('巡检点位置不能为空');
                }

                else
                {
                    if(nfcid=="")
                    {
                        alert('NFC卡编码不能为空');
                    }
                    else
                    {
       

                            var apipath = $api.getStorage('apipath');
                            var apiurl = apipath+"/Xjxtapi/savexjd";
                            api.ajax({
                                url: apiurl,
                                method: 'post',
                                timeout: 5,
                                dataType: 'json',
                                returnAll: false,
                                data:{
                                    values: {
                                        apiuser:getConfigValue('apiuser'),
                                        apipass:getConfigValue('apipass'),
                                        uid: uid,
                                        xjdtitle: xjdtitle,
                                        xjdbianhao: xjdbianhao,
                                        xjdposition: xjdposition,
                                        nfcid: nfcid
                                    }
                                }
                            }, function(ret, err) {
                                //alert(JSON.stringify(ret));
                                alert(ret.remsg);
                                if(ret.renum=='1')
                                {
                                    api.closeWin({name:'xjd'});
                                }
                            });
                        
                    }

                }
            }
        }
    }
</script>

</html>
